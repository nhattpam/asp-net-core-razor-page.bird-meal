@page
@model BirdMeal.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    var loginFailed = ViewData["loginFailed"]?.ToString();
}

<div class="container" style="width: 24%; margin-top: 52px" >
    <h2 class="text-center">Login</h2>
    @if (!string.IsNullOrWhiteSpace(loginFailed))
    {
        <div class="alert alert-danger" role="alert">
            @loginFailed
        </div>
    }
    <form method="post">
        <!-- Email input -->
        <div class="form-outline mb-8">
            <label class="form-label" for="form2Example1" >Email address</label>
            <input type="email" id="form2Example1" class="form-control" asp-for="LoginMember.Email" />
        </div>

        <!-- Password input -->
        <div class="form-outline mb-10">
            <label class="form-label" for="form2Example2">Password</label>
            <input type="password" id="form2Example2" class="form-control" asp-for="LoginMember.Password" />
        </div>
        <div class="form-outline mb-" style="margin-top:20px">
            <!-- Submit button -->
            <button type="submit" class="btn btn-dark btn-block">Sign in</button>

        </div>
       
    </form>
    <div class="container">
        <a href="/Register">Register an account?</a>
    </div>
</div>