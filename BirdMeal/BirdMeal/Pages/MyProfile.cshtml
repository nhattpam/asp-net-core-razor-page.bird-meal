@page "{id}"
@model BirdMeal.Pages.MyProfileModel
@{
    var MessageSuccess = ViewData["EditSuccessMessage"]?.ToString();
}
<h1>Edit Profile</h1>
@if (!string.IsNullOrWhiteSpace(MessageSuccess))
{
            <div class="alertalert-success" role="alert">
        @MessageSuccess
            </div>
}
<form method="post" class="my-4" >
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="EditUser.UserId" />

    <div class="form-group">
        <label for="productName">Full Name:</label>
        <input type="text" class="form-control" asp-for="EditUser.FullName" required />
        <span asp-validation-for="EditUser.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="price">Email:</label>
        <input type="email" class="form-control" asp-for="EditUser.Email" required>
        <span asp-validation-for="EditUser.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="quantity">Password:</label>
        <input type="password" class="form-control" asp-for="EditUser.Password"  />
        <span asp-validation-for="EditUser.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="description">Phone:</label>
        <input type="text" id="form2Example2" class="form-control" asp-for="EditUser.Phone" pattern="\d{10}" title="Please enter a 10-digit phone number" required />
        <div class="invalid-feedback">Please enter a valid 10-digit phone number.</div>
        <span asp-validation-for="EditUser.Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="productName">Address:</label>
        <input type="text" class="form-control" asp-for="EditUser.Address" required />
        <span asp-validation-for="EditUser.Address" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
