@page
@model BirdMeal.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    var MessageFailed = ViewData["MessageFailed"]?.ToString();
    var MessageSuccess = ViewData["MessageSuccess"]?.ToString();
}
<div class="container" style="width: 24%; margin-top: 20px">
    <h2 class="text-center">Sign up</h2>
    @*hien thi message*@
    @if (!string.IsNullOrWhiteSpace(MessageFailed))
    {
        <div class="alert alert-danger" role="alert">
            @MessageFailed
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(MessageSuccess))
    {
        <div class="alert alert-success" role="alert">
            @MessageSuccess
        </div>
    }
    <form method="post">
        <!-- Email input -->
        <div class="form-outline mb-8">
            <label class="form-label" for="form2Example1">Email address</label>
            <input type="email" id="form2Example1" class="form-control" asp-for="AddUser.Email"/>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-10">
            <label class="form-label" for="form2Example2">Password</label>
            <input type="password" id="form2Example2" class="form-control" asp-for="AddUser.Password" />
        </div>
        <!-- Password input -->
        <div class="form-outline mb-10">
            <label class="form-label" for="form2Example2">FullName</label>
            <input type="text" id="form2Example2" class="form-control" asp-for="AddUser.FullName" />
        </div><!-- Password input -->
        <div class="form-outline mb-10">
            <label class="form-label" for="form2Example2">Phone Number</label>
            <input type="text" id="form2Example2" class="form-control" asp-for="AddUser.Phone" pattern="\d{10}" title="Please enter a 10-digit phone number" required />
            <div class="invalid-feedback">Please enter a valid 10-digit phone number.</div>
        </div>
        <div class="form-outline mb-10">
            <label class="form-label" for="form2Example2">Address</label>
            <input type="text" id="form2Example2" class="form-control" asp-for="AddUser.Address" />
        </div>
        <div class="form-outline mb-" style="margin-top:20px">
            <!-- Submit button -->
            <button type="submit" class="btn btn-dark btn-block">Sign up</button>
        </div>
       

    </form>
    <div class="container">
        <a href="/Login">Already have an account? Login</a>
    </div>
</div>