@page "{id}"
@model BirdMeal.Pages.Staffs.Products.EditProductModel
@{
    ViewData["Title"] = "Staff - Edit Product";
    Layout = "~/Pages/Shared/StaffLayout.cshtml";
    var EditSuccessMessage = ViewData["EditSuccessMessage"]?.ToString();
    var EditErrorMessage = ViewData["EditErrorMessage"]?.ToString();
}

<div>
    <h1>Edit Product</h1>
    @if (!string.IsNullOrWhiteSpace(EditSuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @EditSuccessMessage
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(EditErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @EditErrorMessage
        </div>
    }
</div>
<form method="post" class="my-4" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <input type="hidden" asp-for="EditProduct.ProductId" />
    
    <div class="form-group">
        <label for="productName">Product Name:</label>
        <input type="text" class="form-control" asp-for="EditProduct.ProductName" required />
        <span asp-validation-for="EditProduct.ProductName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" class="form-control" asp-for="EditProduct.Price" required min="1">
        <span asp-validation-for="EditProduct.Price" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" class="form-control" asp-for="EditProduct.Quantity" required min="1" />
        <span asp-validation-for="EditProduct.Quantity" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" asp-for="EditProduct.Description" rows="4"></textarea>
        <span asp-validation-for="EditProduct.Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="status">Status:</label>
        <select class="form-control" id="status" asp-for="EditProduct.Status" required>
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
        <span asp-validation-for="EditProduct.Status" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="weight">Weight:</label>
        <input type="number" class="form-control" asp-for="EditProduct.Weight" min="1" required>
        <span asp-validation-for="EditProduct.Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="image">Image:</label>
        <input type="file" class="form-control-file" asp-for="Image">
        
    </div>
    @if (!string.IsNullOrEmpty(Model.EditProduct.Image))
    {
        <div>
            <img src="~/images/@Model.EditProduct.Image" alt="Product Image" width="200" />
        </div>
    }

    @if (Model.Image != null)
    {
        <div>
            <img src="~/images/@Model.Image.FileName" alt="Product Image" width="200" />
        </div>
    }



    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
