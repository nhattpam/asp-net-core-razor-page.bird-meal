@page
@model BirdMeal.Pages.SearchModel
@{
    ViewData["Title"] = "Search Result";
}

<div class="container">
    <h2 class="text-center">Result</h2>

    <h3>Products:</h3>
    @if (Model.ListProducts != null && Model.ListProducts.Any())
    {
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">

                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var item in Model.ListProducts)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="~/images/@item.Image" alt="..." />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@item.ProductName</h5>
                                        <!-- Product price-->
                                @item.Price $
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-primary mt-auto" href="~/Globals/Products/DetailGlobal/@item.ProductId">More information</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>


            </div>
        </section>
    }
    else
    {
        <p>No products found.</p>
    }

    <h3>Meals:</h3>
    @if (Model.ListMeals != null && Model.ListMeals.Any())
    {
        
    <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">

                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var item in Model.ListMeals)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="~/images/combo.jpg" alt="..." />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@item.MealId</h5>
                                        <!-- Product price-->
                                        <h6>@item.Description</h6>
                                        @item.TotalCost $
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-primary mt-auto" href="~/Globals/Meals/DetailGlobal/@item.MealId">More information</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>


            </div>
        </section>
    }
    else
    {
        <p>No meals found.</p>
    }
</div>
