@page "{id}"
@model BirdMeal.Pages.Globals.Products.DetailGlobalModel
@{
    ViewData["Title"] = "Detail Product";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        @if (Model.ProductDetail != null)
        {
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <img class="card-img-top mb-5 mb-md-0" src="~/images/@Model.ProductDetail.Image" />
                </div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">@Model.ProductDetail.ProductName</h1>
                    <div class="fs-5 mb-5">
                        Price: <span>@Model.ProductDetail.Price $</span>
                    </div>
                    <hr />
                   <div class="small mb-1">Weight:@Model.ProductDetail.Weight g</div>
                    @*<div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 3rem" />
                        <button class="btn btn-primary flex-shrink-0" type="button">
                            <i class="bi-cart-fill me-1"></i>
                            Add to cart
                        </button>
                    </div>*@
                </div>
            </div>
            
        }
        else
        {
            <p>No product details found.</p>
        }
        <h3>Product Information</h3>
        <div>
            @Model.ProductDetail.Description
        </div>
    </div>
</section>
